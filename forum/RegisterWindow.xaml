<Window x:Class="forum.RegisterWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:forum"
        mc:Ignorable="d"
        Title="RegisterWindow" Height="450" Width="800">
    <Grid>
        <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center">
            <TextBlock Text="Имя пользователя:" Margin="0,0,0,5"/>
            <TextBox x:Name="UsernameTextBox" Width="200" Margin="0,0,0,10"/>

            <TextBlock Text="Email:" Margin="0,0,0,5"/>
            <TextBox x:Name="EmailTextBox" Width="200" Margin="0,0,0,10"/>

            <TextBlock Text="Пароль:" Margin="0,0,0,5"/>
            <PasswordBox x:Name="PasswordBox" Width="200" Margin="0,0,0,10"/>

            <TextBlock Text="Подтвердите пароль:" Margin="0,0,0,5"/>
            <PasswordBox x:Name="ConfirmPasswordBox" Width="200" Margin="0,0,0,10"/>

            <TextBlock Text="Имя:" Margin="0,0,0,5"/>
            <TextBox x:Name="FirstNameTextBox" Width="200" Margin="0,0,0,10"/>

            <TextBlock Text="Фамилия:" Margin="0,0,0,5"/>
            <TextBox x:Name="LastNameTextBox" Width="200" Margin="0,0,0,10"/>

            <!-- Добавляем ComboBox для выбора роли -->
            <TextBlock Text="Роль:" Margin="0,0,0,5"/>
            <ComboBox x:Name="RoleComboBox" Width="200" Margin="0,0,0,10"/>

            <Button Content="Зарегистрироваться" Width="120" Margin="0,20,0,10" Click="RegisterButton_Click"/>
            <Button Content="Назад" Width="100" Click="BackButton_Click"/>
        </StackPanel>
    </Grid>
</Window>
