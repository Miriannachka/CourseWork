<Window x:Class="forum.LoginWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:forum"
        mc:Ignorable="d"
        Title="LoginWindow" Height="450" Width="800">
    <Grid>
        <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center">
            <TextBlock Text="Имя пользователя:" />
            <TextBox x:Name="UsernameTextBox" Width="200" Margin="0,0,0,10"/>
            <TextBlock Text="Пароль:" />
            <PasswordBox x:Name="PasswordBox" Width="200" Margin="0,0,0,10"/>
            <Button Content="Войти" Width="100" Margin="0,0,0,10" Click="LoginButton_Click"/>
            <Button Content="Назад" Width="100" Click="BackButton_Click"/>
        </StackPanel>
    </Grid>
</Window>
