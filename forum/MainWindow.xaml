<Window x:Class="forum.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:forum"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <TextBlock Text="Добро пожаловать на форум с кулинарными рецептами!" 
                       FontSize="20" FontWeight="Bold" 
                       TextAlignment="Center" Margin="0,140,0,20"/>
        <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center">
            <Button Content="Войти" Width="150" Margin="0,0,0,10" Click="LoginButton_Click"/>
            <Button Content="Зарегистрироваться" Width="150" Click="RegisterButton_Click"/>
        </StackPanel>
    </Grid>
</Window>
